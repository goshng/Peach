#!/bin/bash

NOWEBFILE=/Users/goshng/Documents/Projects/peach/imr/noweb/imr.nw


CPPFILE=( imr.cpp \
          imrTree.cpp \
          imrEdge.cpp \
          imrSequence.cpp \
          imrHelp.cpp \
          imrDefault.cpp \
          imrXmlFastsimcoal.cpp \
          imrXmlImrInput.cpp \
          imrXmlImrOutput.cpp \
          imrXml.cpp )
HPPFILE=( imr.h \
          imrTree.h \
          imrEdge.h \
          imrSequence.h \
          imrHelp.h \
          imrDefault.h \
          imrXmlFastsimcoal.h \
          imrXmlImrInput.h \
          imrXmlImrOutput.h \
          imrXml.h \
          imrType.h )

notangle -RCMakeLists.txt $NOWEBFILE > CMakeLists.txt

for f in ${CPPFILE[@]}; do
  notangle -L -R$f $NOWEBFILE > $f
done

for f in ${HPPFILE[@]}; do
  notangle -R$f $NOWEBFILE | cpif $f
done

sed s/IMRBUILDDATETIME/$(date +%y%m%d%H%M%S)/g < imrHelp.cpp > imrHelp.cpp.tmp
mv imrHelp.cpp.tmp imrHelp.cpp
