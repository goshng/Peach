	Santa Cruz, California 95060, USA. eric.anderson@noaa.gov},
  keywords = {Algorithms; Alleles; Animals; Computer Simulation; Gene Frequency;
	Genetics, Population; Humans; Likelihood Functions; Models, Genetic;
	Models, Statistical; Models, Theoretical; Monte Carlo Method; Mutation;
	Population Density; Probability; Software; Time Factors},
  owner = {goshng},
  pii = {genetics.104.038349},
  pmid = {15834143},
  timestamp = {2009.02.26},
  url = {http://dx.doi.org/10.1534/genetics.104.038349}
}

